http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	xmlns:ns1="http://www.bluetechnology.com.tw/wsdl/v1-0"
	default-dependency-check="none" default-lazy-init="false">
	
	<context:component-scan base-package="com.bluetechnology"/>

	<jaxws:client id="webServiceTicketClient"
		serviceClass="com.bluetechnology.wsdl.v1_0.TicketSeatInquiryPortType"
		address="http://127.0.0.1:8089/webservice-ticket-service/ws-example?wsdl"
		endpointName="TicketSeatInquiryHttpPort" serviceName="ns1:TicketSeatInquiryHttpService"
		wsdlLocation="TicketSeatInquiry.wsdl">
		<jaxws:outInterceptors>
			<bean class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
				<constructor-arg>
					<map>
						<entry key="action" value="UsernameToken" />
						<entry key="user" value="kerrigan" />
						<entry key="passwordType" value="PasswordDigest" />
						<entry key="passwordCallbackClass"
							value="com.bluetechnology.security.ClientPasswordCallback" />
					</map>
				</constructor-arg>
			</bean>
		</jaxws:outInterceptors>
	</jaxws:client>
